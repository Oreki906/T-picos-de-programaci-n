<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AgendaPersonal"
             x:Class="AgendaPersonal.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!-- Estilo para el label de bienvenida -->
            <Style x:Key="welcome" TargetType="Label">
                <Setter Property="FontFamily" Value="OpenSansBold" />
                <Setter Property="TextColor" Value="#333333" />
            </Style>

            <!-- Color secundario -->
            <Color x:Key="Secondary">#666666</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>
