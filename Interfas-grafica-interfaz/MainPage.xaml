<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaPersonal.MainPage"
             BackgroundColor="#131316">

    <StackLayout Padding="30" Spacing="20" VerticalOptions="Center">

        <Label Text="Agenda Personal"
               FontSize="28"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="White" />

        <Button Text="📇 Lista de Contactos"
                Clicked="IrListaContactos"
                BackgroundColor="#4CAF50"
                TextColor="White"
                CornerRadius="10"
                FontSize="18"
                HeightRequest="50" />

        <Button Text="➕ Crear Nuevo Contacto"
                Clicked="IrCrearContacto"
                BackgroundColor="#2196F3"
                TextColor="White"
                CornerRadius="10"
                FontSize="18"
                HeightRequest="50" />

        <Button Text="⚙️ Configuración"
                Clicked="IrConfiguracion"
                BackgroundColor="#FF9800"
                TextColor="White"
                CornerRadius="10"
                FontSize="18"
                HeightRequest="50" />

    </StackLayout>

</ContentPage>
