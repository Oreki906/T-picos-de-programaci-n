<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaPersonal.CrearContactoPage"
             Title="Crear Contacto">

    <FlexLayout Direction="Column" AlignItems="Start"
                JustifyContent="Center" Padding="20">

        <Entry x:Name="nombreEntry" Placeholder="Nombre" WidthRequest="250" />
        <Entry x:Name="telefonoEntry" Placeholder="Teléfono" WidthRequest="250" />
        <Entry x:Name="correoEntry" Placeholder="Correo" WidthRequest="250" />
        <Entry x:Name="direccionEntry" Placeholder="Dirección" WidthRequest="250" />

        <Button Text="Guardar Contacto" WidthRequest="250" Clicked="Guardar" />
    </FlexLayout>
</ContentPage>
